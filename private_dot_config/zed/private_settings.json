// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "theme": {
    "mode": "system",
    "light": "Catppuccin Latte (green)",
    "dark": "Catppuccin Macchiato (green)"
  },
  "icon_theme": {
    "mode": "system",
    "light": "Catppuccin Latte",
    "dark": "Catppuccin Macchiato"
  },
  "max_tabs": 10,
  "buffer_font_size": 12,
  "ui_font_family": "SF Pro",
  "buffer_font_family": "JetBrains Mono",
  "buffer_font_weight": null,
  "terminal": {
    "font_family": "JetBrainsMono Nerd Font",
    "toolbar": {
      "breadcrumbs": false
    }
  },
  "scroll_beyond_last_line": "off",
  "scrollbar": {
    "axes": {
      "horizontal": false
    }
  },
  "agent": {
    "default_profile": "ask",
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-5"
    }
  },
  "show_edit_predictions": false,
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "edit_predictions": {
    "disabled_globs": [""],
    "mode": "subtle"
  },
  "languages": {
    "HTML": {
      "formatter": {
        "language_server": {
          "name": "biome"
        }
      }
    },
    "JavaScript": {
      // "formatter": {
      //   "external": {
      //     "command": "prettier",
      //     "arguments": ["--stdin-filepath", "{buffer_path}"]
      //   }
      // }
      "formatter": {
        "language_server": {
          "name": "biome"
        }
      }
    },
    "Markdown": {
      "show_edit_predictions": false
    },
    "PHP": {
      "show_edit_predictions": true,
      "language_servers": ["intelephense", "!phpactor", "..."]
    },
    "Caddyfile": {
      "format_on_save": "on",
      "tab_size": 2,
      "formatter": {
        "external": {
          "command": "caddy",
          "arguments": ["fmt", "-"]
        }
      }
    }
  },
  "base_keymap": "SublimeText",
  "cursor_blink": false,
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "calls": {
    "mute_on_join": true,
    "share_on_join": false
  },
  "chat_panel": {
    "button": "never"
  },
  "collaboration_panel": {
    "button": false
  },
  "title_bar": {
    "show_user_picture": false,
    "show_onboarding_banner": false
  },
  // Save
  "format_on_save": "off",
  "autosave": "on_focus_change",
  // stop adding/removing whitespace in files
  "ensure_final_newline_on_save": false,
  "remove_trailing_whitespace_on_save": false,
  "lsp": {
    "yaml-language-server": {
      "settings": {
        "yaml": {
          "schemaStore": {
            "enable": false
          }
        }
      }
    }
  },
  "file_types": {
    "Caddyfile": ["Caddyfile*", "*.caddyfile"],
    "Blade": ["*.blade.php"]
  },
  "load_direnv": "shell_hook",
  "minimap": {
    "show": "never",
    "thumb": "hover",
    "thumb_border": "none"
  },
  "auto_install_extensions": {
    "astro": true,
    "basher": true,
    "caddyfile": true,
    "catppuccin": true,
    "catppuccin-icons": true,
    "csv": true,
    "emmet": true,
    "env": true,
    "fish": true,
    "git-firefly": true,
    "go-snippets": true,
    "gosum": true,
    "html": true,
    "ini": true,
    "log": true,
    "lua": true,
    "make": true,
    "mariana-theme": true,
    "marksman": true,
    "php": true,
    "ssh-config": true,
    "toml": true,
    "typos": true,
    "xml": true
  }
}
