// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "git": {
    "inline_blame": {
      "show_commit_summary": true
    }
  },
  "zoomed_padding": false,
  "tabs": {
    "close_position": "left",
    "file_icons": true,
    "git_status": true
  },
  "completions": {
    "lsp_fetch_timeout_ms": 0
  },
  "max_tabs": 10,
  "buffer_font_size": 13,
  "ui_font_family": "SF Pro",
  "buffer_font_family": "JetBrains Mono",
  "terminal": {
    "font_family": "JetBrainsMono Nerd Font",
    "toolbar": {
      "breadcrumbs": false
    }
  },
  "scroll_beyond_last_line": "off",
  "scrollbar": {
    "axes": {
      "horizontal": false
    }
  },
  "agent": {
    "always_allow_tool_actions": true,
    "default_profile": "write",
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-5"
    }
  },
  "show_edit_predictions": true,
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "edit_predictions": {
    "disabled_globs": [""],
    "mode": "subtle"
  },
  "languages": {
    "Go": {
      "show_edit_predictions": true
    },
    "Rust": {
      "show_edit_predictions": true
    },
    "Markdown": {
      "show_edit_predictions": false
    },
    "PHP": {
      "show_edit_predictions": true,
      "language_servers": ["intelephense", "!phpactor", "..."]
    },
    "Caddyfile": {
      "format_on_save": "on",
      "tab_size": 2,
      "formatter": {
        "external": {
          "command": "caddy",
          "arguments": ["fmt", "-"]
        }
      }
    }
  },
  "base_keymap": "SublimeText",
  "cursor_blink": false,
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "calls": {
    "mute_on_join": true,
    "share_on_join": false
  },
  "collaboration_panel": {
    "button": false
  },
  "title_bar": {
    "show_sign_in": true,
    "show_branch_icon": true,
    "show_user_picture": false,
    "show_onboarding_banner": false
  },
  // Save
  "format_on_save": "off",
  "autosave": "on_focus_change",
  // stop adding/removing whitespace in files
  "ensure_final_newline_on_save": false,
  "remove_trailing_whitespace_on_save": false,
  "lsp": {
    "yaml-language-server": {
      "settings": {
        "yaml": {
          "schemaStore": {
            "enable": false
          }
        }
      }
    }
  },
  "file_types": {
    "Caddyfile": ["Caddyfile*", "*.caddyfile"],
    "Blade": ["*.blade.php"]
  },
  "load_direnv": "shell_hook",
  "minimap": {
    "show": "never",
    "thumb": "hover",
    "thumb_border": "none"
  },
  "auto_install_extensions": {
    "astro": true,
    "basher": true,
    "caddyfile": true,
    "csv": true,
    "emmet": true,
    "env": true,
    "fish": true,
    "git-firefly": true,
    "go-snippets": true,
    "gosum": true,
    "html": true,
    "ini": true,
    "log": true,
    "lua": true,
    "make": true,
    "mariana-theme": true,
    "marksman": true,
    "php": true,
    "ssh-config": true,
    "toml": true,
    "typos": true,
    "xml": true,
    "react-typescript-snippets": true,
    "snippets":true
  },
// "helix_mode": true 
}
